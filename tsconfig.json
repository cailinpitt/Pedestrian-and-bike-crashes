{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "outDir": "./build"
  },
  "include": [
    "./*",
    "./**/*"
  ],
  "exclude": [
    "node_modules",
    "assets-*"
  ]
}